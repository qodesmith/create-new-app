  <meta name="theme-color" content="<% htmlWebpackPlugin.options.mobileThemeColor %>">
  <meta name="apple-mobile-web-app-status-bar-style" content="<% htmlWebpackPlugin.options.mobileThemeColor %>">
  <% } %>

</head>
